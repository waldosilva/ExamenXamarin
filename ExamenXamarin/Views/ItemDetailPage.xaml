<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenXamarin.Views.ItemDetailPage"
             Title="{Binding Title}">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Edit" Command="{Binding EditItemCommand}" />
    <ToolbarItem Text="Delete" Command="{Binding DeleteCommand }" />
  </ContentPage.ToolbarItems>


  <StackLayout Spacing="20" Padding="15">
        <Label Text="Usuario:" FontSize="Medium" />
    <Label Text="{Binding UserName}" FontSize="Small"/>
        <!--<Label Text="Description:" FontSize="Medium" />
    <Label Text="{Binding Password}" FontSize="Small"/>-->
    </StackLayout>
    
</ContentPage>
